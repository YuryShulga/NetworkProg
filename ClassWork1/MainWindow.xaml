<Window x:Class="ClassWork1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassWork1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <WrapPanel>
            <TextBox x:Name="TextBox_Adress" Width="400" Height="40" HorizontalAlignment="Left" Margin="5"/>
            <Button x:Name="Button_Send" 
                    Content="Send to server" 
                    Margin="5"
                    Click="Button_Send_Click"/>
        </WrapPanel>
        <DockPanel LastChildFill="True">
            <WrapPanel DockPanel.Dock="Top">
                <TextBlock x:Name="TextBlock_AnswerCode"
                           Text="код ответа"
                           HorizontalAlignment="Left"/>
            </WrapPanel>
            <TextBox x:Name="TextBox_Content"
                     AcceptsReturn="True" 
                     TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"/>    
        </DockPanel>
        

    </StackPanel>
</Window>
